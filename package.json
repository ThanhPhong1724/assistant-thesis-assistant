{
    "name": "thesis-assistant",
    "version": "0.1.0",
    "private": true,
    "description": "Thesis Writing Assistant - Hệ thống hỗ trợ viết đồ án/luận văn với format chuẩn 100%",
    "keywords": [
        "thesis",
        "academic",
        "word-export",
        "vietnam"
    ],
    "author": "Thesis Assistant Team",
    "license": "MIT",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "clean": "turbo run clean && rimraf node_modules",
        "db:generate": "pnpm --filter @thesis/database generate",
        "db:push": "pnpm --filter @thesis/database push",
        "db:migrate": "pnpm --filter @thesis/database migrate",
        "db:studio": "pnpm --filter @thesis/database studio"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "rimraf": "^5.0.5",
        "turbo": "^2.3.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "pnpm@9.0.0",
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=9.0.0"
    }
}